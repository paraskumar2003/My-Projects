<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather App </title>
    <!-- CSS Links -->
    <link rel="stylesheet" href="../Styles/style.css">
    <!-- Font awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer"
    />
    <!-- Google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@300;400;500&display=swap" rel="stylesheet">
</head>

<body id="body">
    <!-- header -->
    <header>
        <nav>
            <div class="nav-center flex-div">
                <div class="logo-container flex-div">
                    <img src="../Images/rainbow-solid.svg" alt="logo" class="logo"><br>
                    <p>Logo</p>
                </div>
                <div class="nav-bar flex-div">
                    <div class="user-info flex-div">
                        <div class="user-img">
                            <img src="../Images/pic.jpeg" alt="">
                        </div>
                        <div class="name">
                            <p class="greeting">Hello,</p>
                            <p>Jack Grealish</p>
                        </div>
                    </div>

                    <div class="search-corner flex-div">
                        <div class="search-box flex-div">
                            <input type="text" placeholder="Search anything...">
                            <button class="btn btn-search">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                        <button class="btn btn-bell">
                            <i class="fa-regular fa-bell"></i>
                        </button>
                        <button class="btn btn-sidebar">
                            <i class="fas fa-bars"></i>
                        </button>
                    </div>
                </div>

            </div>
        </nav>
    </header>
    <!-- Header Finished -->
    <!-- sidebar start -->

    <div class="sidebar flex-div show-sidebar">
        <ul class="links-container flex-div">
            <div class="nav-links">
                <li>
                    <a href="#" class="link">
                        <i class="fa-solid fa-chart-simple"></i>
                    </a>
                </li>
                <li>
                    <a href="#" class="link">
                        <i class="fa-solid fa-location-dot"></i>
                    </a>
                </li>
                <li>
                    <a href="#" class="link">
                        <i class="fa-regular fa-calendar"></i>
                    </a>
                </li>
                <li>
                    <a href="#" class="link">
                        <i class="fa-solid fa-gear"></i>
                    </a>
                </li>
            </div>
            <li>
                <a href="#" class="link">
                    <i class="fa-solid fa-door-open"></i>
                </a>
            </li>
        </ul>
    </div>
    <!-- sidebar finished -->
    <!-- main -->
    <main class="main-container">
        <div class="container">
            <div class="item">
                <img src="../Images/rain.jpg" alt="">
                <div class="info-window window-1 flex-div">
                    <div class="head">
                        <button class="btn btn-weather">
                            <i class="fas fa-cloud"></i>
                        </button>
                        <div class="about">
                            <h4>Weather</h4>
                            <p>What's the weather</p>
                        </div>
                    </div>
                    <div class="middle flex-div">
                        <div class="temp flex-div">
                            <h3>
                                {temp} &deg;C</h3>
                            <p>
                                {tempmin} &deg;C</p><br>
                        </div>
                        <h3 class="weather-description">{weather-desc}</h3>

                    </div>
                    <div class="footer flex-div">
                        <div class="item item1">
                            <h4>Pressure</h4>
                            <p>{pressure}mb</p>
                        </div>
                        <div class="item item2">
                            <h4>Visibility</h4>
                            <p>{visibility}km</p>
                        </div>
                        <div class="item item3">
                            <h4>Humidity</h4>
                            <p>{humidity}%</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="item">
                <img src="../Images/smoke.jpg" alt="">
                <div class="info-window window-2 flex-div">
                    <div class="head">
                        <button class="btn btn-weather">
                            <i class="fas fa-wind"></i>
                        </button>
                        <div class="about">
                            <h4>Air Quality</h4>
                            <p>Main pollution : PM 2.5</p>
                        </div>


                    </div>
                    <div class="middle flex-div">
                        <div class="temp flex-div">
                            <h3>390</h3>
                            <p>AQI</p><br>
                        </div>
                        <h3 class="wind-dir">West Wind</h3>

                    </div>
                    <div class="footer flex-div">
                        <div class="level">
                            <div class="good">Good</div>
                            <div class="bad">Hazardous</div>
                        </div>
                        <div class="level-value">
                            <input type="range" class="air-quality">
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </main>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        // get data
        const url = "https://api.waqi.info/search/?keyword=Agra&token=1901d33a6e603fc0440bfd58989829bde3bde73f";
        const url2 = "https://api.openweathermap.org/data/2.5/weather?q=Agra,in&appid=f328047da69cf02de9d737ce3066d54d&units=metric";
        fetch(url2).then((res) => {
            return res.json();
        }).then((data) => {
            // console.log(data);
            const details = [data];
            Data = details.map((val) => {
                console.log(val);
                $(".window-1 .temp h3").text(val.main.temp + "°C");
                $(" .window-1 .temp p").text(val.main.feels_like + "°C");
                $(".weather-description").text(val.weather[0].description);
                $(".footer .item1 p").text(val.main.pressure + "mb");
                $(".item2 p").text(val.visibility + "m");
                $(".item3 p").text(val.main.humidity + "%");
                if (val.wind.deg > 315 || val.wind.deg < 45) {
                    $(".wind-dir").text("North Wind  " + val.wind.deg + "° ")
                }
                if (val.wind.deg > 270 || val.wind.deg < 315) {
                    $(".wind-dir").text("East Wind  " + val.wind.deg + "° ")
                }
                if (val.wind.deg > 135 || val.wind.deg < 271) {
                    $(".wind-dir").text("South Wind  " + val.wind.deg + "° ")
                } else {

                    $(".wind-dir").text("West Wind  " + val.wind.deg + "° ")
                }

            }).join("");

            //first weather

        })

        fetch(url).then((res) => {
            return res.json()
        }).then((data) => {
            // console.log(data);
            const details = [data];
            Data = details.map((val) => {
                console.log(val);
                $(".window-2 .about p").text(val.data[0].station.name)
                $(".window-2 .temp h3").text(val.data[0].aqi)
                const aqi = (val.data[0].aqi * 100) / 350;
                $(".air-quality").attr("value", 90);

            }).join("");
            // $('.air-quality').rangeslider('disable');
            document.querySelector(".air-quality").disabled = true;
        })
    </script>

</body>

</html>